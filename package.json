{
  "name": "ji-hyung-picks",
  "version": "1.0.0",
  "description": "Ji-Hyung's Hobby Portfolio with React",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .jsx,.js",
    "emulators:start": "firebase emulators:start --only auth,firestore,functions",
    "emulators:auth": "firebase emulators:start --only auth",
    "deploy:firestore": "firebase deploy --only firestore:rules",
    "deploy:frontend": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run deploy:firestore && npm run deploy:functions && npm run deploy:frontend",
    "ship": "node scripts/ship.mjs",
    "ship:fast": "node scripts/ship.mjs --no-deploy"
  },
  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "firebase": "^12.9.0",
    "melona": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^4.3.0"
  }
}
